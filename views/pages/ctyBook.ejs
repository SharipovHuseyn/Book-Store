<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= resCty[0].category %></title>
    <link rel="stylesheet" href="/style/style.css">
</head>
<body>
    <%- include('../part/header.ejs')%>

    <main>
        <div id="books">
            <% for(let i = 0; i < resCty.length; i++){ %>
                <div class="book chosenBtn basketBtn" data-id="<%= resCty[i].id %>">
                    <img class="book-image" src="/image/book/<%= resCty[i].book_image %>" alt="<%= resCty[i].book_header %>">
                    <div class="book_info">
                      <div>
                        <h4 class="book-name"><%= resCty[i].book_header %></h4>
                        <p class="book-price">Цена книги: <b><%= resCty[i].book_price %></b> рублей</p>
                      </div>
                      <div class="chosenChose">
                        <% let isChosen = false; %>
                        <% for(let u = 0; u < chosenBook.length; u++){ %>
                          <% if(chosenBook[u].book_id == resCty[i].id){ %>
                            <div class="onChosenBlock">
                              <img id="chosen" class="onChosen" src="/image/icon/inStar.png" alt="star">
                            </div>
                            <% isChosen = true; %>
                            <% break; %>
                          <% } %>
                        <% } %>
                        <% if (!isChosen) { %>
                          <div class="offChosenBlock">
                            <img id="chosen" class="offChosen" src="/image/icon/unStar.png" alt="star">
                          </div>
                        <% } %>
                      </div>
                    </div>
                    <p class="book-about"><a class="book-about" href="/aboutBook/<%= resCty[i].id %>">Подробное -></a></p>
                    <div class="basketButton">
                      <% let inBasket = false; %>
                      <% for(let j = 0; j < basketBooks.length; j++){ %>
                        <% if(basketBooks[j].book_id == resCty[i].id) {%>
                          <button class="onBasket book-buy-button">В карзине</button>
                          <% inBasket = true; %>
                          <% break; %>
                        <% } %>
                      <% } %>
                      <% if (!inBasket) { %>
                        <button class="book-buy-button" id="offBasket">В карзину</button>
                      <% } %>
                    </div>
                  </div>
            <%}%>
        </div>
    </main>

    <%- include('../part/footer.ejs')%>

    <script src="/scripts/chosen.js"></script>
    <script src="/scripts/basket.js"></script>
</body>
</html>